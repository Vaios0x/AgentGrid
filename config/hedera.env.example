# Hedera Configuration Example
# Copy this file to .env.hedera and fill in your values

# Hedera Testnet Configuration
HEDERA_TESTNET_URL=https://testnet.hashio.io/api
HEDERA_TESTNET_CHAIN_ID=296

# Hedera Mainnet Configuration  
HEDERA_MAINNET_URL=https://mainnet.hashio.io/api
HEDERA_MAINNET_CHAIN_ID=295

# ECDSA Account (Ethereum compatible)
HEDERA_ECDSA_ACCOUNT_ID=0.0.7134182
HEDERA_ECDSA_EVM_ADDRESS=0x8f3ca977c94f5c8d03397bbdb3a7f4b9ca5048a2
HEDERA_ECDSA_PRIVATE_KEY=0x6f74b3941cd81f2033ce7b67b864d8a964b846f37d8fd19e83ef840cf99c238c

# ED25519 Account (Hedera native)
HEDERA_ED25519_ACCOUNT_ID=0.0.7134356
HEDERA_ED25519_PRIVATE_KEY=0x89f3391c6706dc613e15c391161808f880a03ea13efeeec090a8ca6b527e2b67

# Gas Configuration
HEDERA_GAS_PRICE=1
HEDERA_GAS_LIMIT=1000000

# Default Account (ecdsa or ed25519)
HEDERA_DEFAULT_ACCOUNT=ecdsa

# Default Network (testnet or mainnet)
HEDERA_DEFAULT_NETWORK=testnet
